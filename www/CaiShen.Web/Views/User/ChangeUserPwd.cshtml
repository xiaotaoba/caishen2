@model Pannet.Models.ChangePwdVModel

@using Pannet.Models
@using Pannet.DAL.Repository

@{
    ViewBag.Title = "修改密码";
    var UserModel = ViewBag.User;
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <span id="lblTitle">用户信息</span>
            <small>
                <i class="icon-double-angle-right"></i>
                <span>编辑用户信息</span>
            </small>
        </h1>
    </div>
    <ul class="nav nav-tabs padding-18 tab-size-bigger" id="myTab">
        <li class="">
            <a href="@Url.Action("MemberEdit", new { ID = ViewBag.ID })">
                <i class="blue icon-info bigger-120"></i>
                用户信息
            </a>
        </li>

        <li class="">
            <a href="@Url.Action("ChangeUserRole", new { UserID = ViewBag.ID })">
                <i class="green icon-user bigger-120"></i>
                用户角色
            </a>
        </li>

       @* <li class="">
            <a href="@Url.Action("ChangeUserLevel", new { UserID = ViewBag.ID })">
                <i class="orange icon-user bigger-120"></i>
                用户等级
            </a>
        </li>*@
        <li class="">
            <a href="@Url.Action("ChangeUserAmount", new { UserID = ViewBag.ID })">
                <i class="blue icon-credit-card bigger-120"></i>
                用户账户余额
            </a>
        </li>
        <li class="">
            <a href="@Url.Action("ChangeUserScore", new { UserID = ViewBag.ID })">
                <i class="green icon-credit-card bigger-120"></i>
                用户积分
            </a>
        </li>
        <li class="active">
            <a href="@Url.Action("ChangeUserPwd", new { UserID = ViewBag.ID })">
                <i class="blue icon-lock bigger-120"></i>
                修改密码
            </a>
        </li>
    </ul>

    @using (Html.BeginForm("ChangeUserPwd", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    { 
        @Html.ValidationSummary(true)
        @Html.Raw(ViewBag.MessageInfo)
        <input type="hidden" name="UserID" id="UserID" value="@ViewBag.ID" />
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <td colspan="2" align="left"><b>修改密码</b></td>
                </tr>
                <tr>
                    <td width="120">新的密码：</td>
                    <td>
                        @Html.PasswordFor(m => m.NewPassword)
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </td>
                </tr>
                <tr>
                    <td>确认密码：</td>
                    <td>
                        @Html.PasswordFor(m => m.NewPassword2)
                        @Html.ValidationMessageFor(m => m.NewPassword2)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-success"><i class="icon-ok"></i>确定修改</button>
                    </td>
                </tr>
            </tbody>
        </table>
    }
</div>
