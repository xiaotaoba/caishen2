@model Pannet.Models.WeixinConfig
@using Pannet.DAL
@using Pannet.Models

@{
    ViewBag.Title = "微信配置管理 ";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <span id="lblTitle">微信配置管理 </span>
            <small>
                <i class="icon-double-angle-right"></i>
                <span>设置 </span>
            </small>
        </h1>
    </div>


    @using (Html.BeginForm("WeixinConfig", "SystemInfo", FormMethod.Post))
    { 
        @Html.ValidationSummary(true)
        @Html.Raw(ViewBag.MessageInfo)

        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <td width="150">@Html.LabelFor(m => m.WeixinName)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.WeixinName, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.WeixinName)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.AppID)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.AppID, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.AppID)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.AppSecret)： </td>
                    <td>
                        @Html.PasswordFor(m => m.AppSecret, new { @value = Model.AppSecret, style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.AppSecret)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.EncodingAESKey)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.EncodingAESKey, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.EncodingAESKey)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Token)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.Token, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.Token)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.MCHID)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.MCHID, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.MCHID)
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(m => m.KEY)： </td>
                    <td>
                        @Html.PasswordFor(m => m.KEY, new { @value = Model.KEY, style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.KEY)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.TenpayNotify)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.TenpayNotify, new { style = "width:400px" })
                        @Html.ValidationMessageFor(m => m.TenpayNotify)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-success"><i class="icon-ok"></i>保存</button>
                    </td>
                </tr>
            </tbody>
        </table>
    }

</div>
