@model Pannet.Models.UserRole
@{
    ViewBag.Title = "用户角色管理";
}

<div class="page-content">
    <div class="page-header">
        <h1>
            <span id="lblTitle">用户角色信息</span>
            <small>
                <i class="icon-double-angle-right"></i>
                @if (Model != null)
                {
                    <span>编辑角色</span>
                }
                else
                {
                    <span>新增角色</span>
                }
            </small>
        </h1>
    </div>


    @using (Html.BeginForm("UserRoleAdd", "UserRole", FormMethod.Post))
    { 
        @Html.ValidationSummary(true)
        @Html.Raw(ViewBag.MessageInfo)
        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <td width="100"><font color="red">*</font>@Html.LabelFor(m => m.Role_Name)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.Role_Name, new { @class = "input-text" })
                        @Html.ValidationMessageFor(m => m.Role_Name)
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Role_Desc)： </td>
                    <td>
                        @Html.TextAreaFor(m => m.Role_Desc, new { @class = "form-control", style = "width:300px;" })
                        @Html.ValidationMessageFor(m => m.Role_Desc)
                    </td>
                </tr>
                <tr style="display: none;">
                    <td>@Html.LabelFor(m => m.Role_Discount_Percent)： </td>
                    <td>
                        @Html.TextBoxFor(m => m.Role_Discount_Percent, new { @class = "input-text", Value = "100" })
                        @Html.ValidationMessageFor(m => m.Role_Discount_Percent)  （取值范围：0~100）
                    </td>
                </tr>
                
                <tr>
                    <td></td>
                    <td>
                        <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-success"><i class="icon-ok"></i>保存</button>
                    </td>
                </tr>
            </tbody>
        </table>
    }

</div>
