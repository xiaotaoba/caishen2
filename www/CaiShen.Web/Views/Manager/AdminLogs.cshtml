@model PagedList.PagedList<Pannet.Models.ManagerLog>
@using Pannet.Models
@using PagedList.Mvc

@{
    ViewBag.Title = "管理员操作记录";
}

<div class="page-content">
    <div class="page-header">

        <h1>
            <span id="lblTitle">管理员</span>
            <small>
                <i class="icon-double-angle-right"></i>
                操作记录
            </small>
        </h1>
    </div>
    <div class="form-inline">
        <div class="dropdown pull-right">
            <a class="btn btn-sm btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="icon-cog"></i>操作菜单<i class="icon-caret-down"></i>
            </a>
            <ul class="dropdown-menu pull-right" role="menu">
                <li>
                    <a href="javascript:window.location.reload();">
                        <i class="icon-refresh"></i>刷新页面</a>
                </li>
            </ul>
        </div>
    </div>
    <p></p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                @*<th width="20"></th>*@
                <th>操作人</th>
                <th>操作内容</th>
                <th>记录ID</th>
                <th>IP</th>
                <th>时间</th>
                @*<th>操作</th>*@
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                <tr id="dr_row_@i">
                  @*  <td>
                        <input name="ids[@item.ID]" type="checkbox" class="dr_select toggle md-check" value="@item.ID"></td>*@
                    <td>@item.ML_UserName</td>
                    <td>@item.ML_Content</td>
                    <td>@item.ML_ItemID</td>
                    <td>@item.ML_IP</td>
                    <td>@item.ML_CreateTime</td>
                    @*<td class="dr_option">
                        <a class="adel label label-sm label-default" href="@Url.Action("LogDelete", "Manager", new { ID = item.ID })" data-confirm="delete"><i class="icon-trash"></i>删除</a>
                    </td>*@
                </tr>
                }
            }
            <tr>
                <td colspan="20" align="right">@Html.PagedListPager(Model, page => Url.Action("AdminLogs", new { page,ManagerID=ViewBag.ManagerID}))</td>
            </tr>
        </tbody>
    </table>
</div>
